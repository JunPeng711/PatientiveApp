<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".education.Modules1">

    <ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="MissingConstraints">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:background="@drawable/top_banner1"
            android:gravity="center"
            android:padding="30dp"
            android:text="Protect Yourself Against COVID-19"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="16dp"
            tools:ignore="MissingConstraints" />

        <ImageView
            android:id="@+id/imageViewBanner"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="-55dp"
            android:background="@drawable/health_ed_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-50dp">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/module1_paragraph1"
                app:layout_constraintTop_toBottomOf="@+id/textView1"
                android:padding="10dp"
                android:textSize="20sp"
                android:justificationMode="inter_word"
                tools:ignore="MissingConstraints" />

            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginLeft="-150dp"
                android:layout_marginTop="150dp"
                android:background="@drawable/no_covid19" />

        </LinearLayout>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:justificationMode="inter_word"
            android:padding="10dp"
            android:text="@string/module1_paragraph2"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@+id/textView2"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/module1_paragraph3"
            app:layout_constraintTop_toBottomOf="@+id/textView3"
            android:layout_marginTop="20dp"
            android:padding="10dp"
            android:textSize="20sp"
            android:justificationMode="inter_word"
            tools:ignore="MissingConstraints" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="How to Wash Hand"
                android:textStyle="bold"
                android:textSize="20sp"
                android:padding="10dp"/>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="300dp">

                <VideoView
                    android:id="@+id/video_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </FrameLayout>

        </LinearLayout>


    </LinearLayout>



</ScrollView>





</androidx.constraintlayout.widget.ConstraintLayout>