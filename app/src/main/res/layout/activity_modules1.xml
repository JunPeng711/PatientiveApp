<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Modules1">



<ScrollView
    android:layout_width="match_parent"
    android:layout_height="700dp"
    tools:ignore="MissingConstraints">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="30dp"
            android:text="How to Get Away from Covid-19"
            android:gravity="center"
            android:textAllCaps="true"
            android:textSize="25dp"
            android:textStyle="bold"
            android:background="#03A9F4"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/module1_paragraph1"
            app:layout_constraintTop_toBottomOf="@+id/textView1"
            android:layout_marginTop="20dp"
            android:padding="10dp"
            android:textSize="20dp"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/module1_paragraph2"
            app:layout_constraintTop_toBottomOf="@+id/textView2"
            android:layout_marginTop="20dp"
            android:padding="10dp"
            android:textSize="20dp"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/module1_paragraph3"
            app:layout_constraintTop_toBottomOf="@+id/textView3"
            android:layout_marginTop="20dp"
            android:padding="10dp"
            android:textSize="20dp"
            tools:ignore="MissingConstraints" />
    </LinearLayout>

</ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="700dp"
        android:background="@color/white"
        tools:ignore="MissingConstraints">

        <Button
            android:id="@+id/footBtn1"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:background="@drawable/home_icon"
            android:layout_marginStart="10dp"
            android:layout_gravity="bottom"/>

        <Button
            android:id="@+id/footBtn2"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:background="@drawable/report_icon"
            android:layout_marginStart="10dp"
            android:layout_gravity="bottom"/>

        <Button
            android:id="@+id/footBtn3"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:background="@drawable/checkin_icon"
            android:layout_marginStart="20dp"
            android:layout_gravity="bottom"/>

        <Button
            android:id="@+id/footBtn4"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:background="@drawable/appointment_icon"
            android:layout_marginStart="20dp"
            android:layout_gravity="bottom"/>

        <Button
            android:id="@+id/footBtn5"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:background="@drawable/health_education_icon"
            android:layout_marginStart="20dp"
            android:layout_gravity="bottom" />
    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>