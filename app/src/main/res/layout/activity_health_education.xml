<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HealthEducation">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="700dp"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:ignore="MissingConstraints">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#03A9F4">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:layout_margin="10dp"
                    android:text="@string/health_education"
                    android:textAllCaps="true"
                    android:textSize="40sp"
                    android:fontFamily="@font/baloo"/>

            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/baloo"
                android:padding="10dp"
                android:text="@string/categories"
                android:textAllCaps="true"
                android:textSize="30dp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/FilterAll"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="All"
                    android:layout_marginStart="20dp"
                    android:backgroundTint="@android:color/darker_gray"
                    android:textColor="#F44336"
                    android:textStyle="bold|italic"/>

                <Button
                    android:id="@+id/FilterCovid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Covid-19"
                    android:layout_marginStart="20dp"
                    android:backgroundTint="@android:color/darker_gray"
                    android:textColor="#F44336"
                    android:textStyle="bold|italic"/>

                <Button
                    android:id="@+id/FilterExercise"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Exercise"
                    android:layout_marginStart="20dp"
                    android:backgroundTint="@android:color/darker_gray"
                    android:textColor="#F44336"
                    android:textStyle="bold|italic"/>
            </LinearLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="190dp">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="150dp"
                    android:background="@drawable/bg1"
                    android:layout_margin="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Get Rid of \n  Covid-19"
                        android:textSize="30dp"
                        android:fontFamily="@font/baloo"
                        android:padding="20dp"
                        android:layout_marginLeft="20dp"/>

                    <Button
                        android:id="@+id/showBtn1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="false"
                        android:layout_marginTop="110dp"
                        android:layout_marginBottom="-6dp"
                        android:backgroundTint="#23FF9800"
                        android:text="@string/show_all"
                        android:textColor="@color/black"
                        android:textStyle="bold|italic" />

                    <ImageView
                        android:layout_width="140dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/module_icon"
                        android:layout_marginRight="-10dp"
                        android:layout_marginBottom="-20dp"
                        android:layout_alignParentRight="true"/>

                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="190dp">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="150dp"
                    android:background="@drawable/bg2"
                    android:layout_margin="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Module 2"
                        android:textSize="30dp"
                        android:fontFamily="@font/baloo"
                        android:padding="20dp"/>

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="false"
                        android:layout_marginTop="110dp"
                        android:layout_marginBottom="-6dp"
                        android:backgroundTint="#4300BCD4"
                        android:text="@string/show_all"
                        android:textColor="@color/black"
                        android:textStyle="bold|italic" />

                    <ImageView
                        android:layout_width="140dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/module_icon2"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="10dp"
                        android:layout_alignParentRight="true"/>

                </RelativeLayout>



            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="190dp">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="150dp"
                    android:background="@drawable/bg1"
                    android:layout_margin="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Module 3"
                        android:textSize="30dp"
                        android:fontFamily="@font/baloo"
                        android:padding="20dp"/>

                    <Button
                        android:id="@+id/showBtn3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="false"
                        android:layout_marginTop="110dp"
                        android:layout_marginBottom="-6dp"
                        android:backgroundTint="#23FF9800"
                        android:text="@string/show_all"
                        android:textColor="@color/black"
                        android:textStyle="bold|italic" />

                    <ImageView
                        android:layout_width="140dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/module_icon3"
                        android:layout_marginRight="10dp"
                        android:layout_alignParentRight="true"/>

                </RelativeLayout>



            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="190dp">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="150dp"
                    android:background="@drawable/bg2"
                    android:layout_margin="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Module 4"
                        android:textSize="30dp"
                        android:fontFamily="@font/baloo"
                        android:padding="20dp"/>

                    <Button
                        android:id="@+id/showBtn4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="false"
                        android:layout_marginTop="110dp"
                        android:layout_marginBottom="-6dp"
                        android:backgroundTint="#4300BCD4"
                        android:text="@string/show_all"
                        android:textColor="@color/black"
                        android:textStyle="bold|italic" />

                    <ImageView
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/module_icon4"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="15dp"
                        android:layout_alignParentRight="true"/>

                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="190dp">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="150dp"
                    android:background="@drawable/bg1"
                    android:layout_margin="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Module 5"
                        android:textSize="30dp"
                        android:fontFamily="@font/baloo"
                        android:padding="20dp"/>

                    <Button
                        android:id="@+id/showBtn5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="false"
                        android:layout_marginTop="110dp"
                        android:layout_marginBottom="-6dp"
                        android:backgroundTint="#23FF9800"
                        android:text="@string/show_all"
                        android:textColor="@color/black"
                        android:textStyle="bold|italic" />

                    <ImageView
                        android:layout_width="140dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:src="@drawable/module_icon5"
                        android:layout_marginRight="10dp"
                        android:layout_alignParentRight="true"/>

                </RelativeLayout>
            </RelativeLayout>

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="700dp"
        android:background="#CCC5C5"
        tools:ignore="MissingConstraints">

        <Button
            android:id="@+id/footBtn1"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:background="@drawable/home_icon"
            android:layout_marginStart="10dp"
            android:layout_gravity="bottom"/>

        <Button
            android:id="@+id/footBtn2"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:background="@drawable/report_icon"
            android:layout_marginStart="10dp"
            android:layout_gravity="bottom"/>

        <Button
            android:id="@+id/footBtn3"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:background="@drawable/checkin_icon"
            android:layout_marginStart="20dp"
            android:layout_gravity="bottom"/>

        <Button
            android:id="@+id/footBtn4"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:background="@drawable/appointment_icon"
            android:layout_marginStart="20dp"
            android:layout_gravity="bottom"/>

        <Button
            android:id="@+id/footBtn5"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:background="@drawable/health_education_icon"
            android:layout_marginStart="20dp"
            android:layout_gravity="bottom" />
    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>

