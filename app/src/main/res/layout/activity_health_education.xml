<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HealthEducation">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="700dp"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:ignore="MissingConstraints">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#03A9F4">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="@string/health_education"
                    android:textAlignment="center"
                    android:textAllCaps="true"
                    android:textSize="40sp"
                    android:fontFamily="@font/baloo"/>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/home"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/ic_home" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/baloo"
                    android:padding="10dp"
                    android:text="@string/modules"
                    android:textAllCaps="true"
                    android:textSize="30dp" />

            </LinearLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="190dp">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="150dp"
                    android:background="@drawable/bg1"
                    android:layout_margin="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Get Rid of \n  Covid-19"
                        android:textSize="30dp"
                        android:fontFamily="@font/baloo"
                        android:padding="20dp"
                        android:layout_marginLeft="20dp"/>

                    <Button
                        android:id="@+id/showBtn1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="false"
                        android:layout_marginTop="110dp"
                        android:layout_marginBottom="-6dp"
                        android:backgroundTint="#23FF9800"
                        android:text="@string/show_all"
                        android:textColor="@color/black"
                        android:textStyle="bold|italic" />

                    <ImageView
                        android:layout_width="140dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/module_icon"
                        android:layout_marginRight="-10dp"
                        android:layout_marginBottom="-20dp"
                        android:layout_alignParentRight="true"/>

                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="190dp">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="150dp"
                    android:background="@drawable/bg2"
                    android:layout_margin="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Module 2"
                        android:textSize="30dp"
                        android:fontFamily="@font/baloo"
                        android:padding="20dp"/>

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="false"
                        android:layout_marginTop="110dp"
                        android:layout_marginBottom="-6dp"
                        android:backgroundTint="#4300BCD4"
                        android:text="@string/show_all"
                        android:textColor="@color/black"
                        android:textStyle="bold|italic" />

                    <ImageView
                        android:layout_width="140dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/module_icon2"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="10dp"
                        android:layout_alignParentRight="true"/>

                </RelativeLayout>



            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="190dp">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="150dp"
                    android:background="@drawable/bg1"
                    android:layout_margin="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Module 3"
                        android:textSize="30dp"
                        android:fontFamily="@font/baloo"
                        android:padding="20dp"/>

                    <Button
                        android:id="@+id/showBtn3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="false"
                        android:layout_marginTop="110dp"
                        android:layout_marginBottom="-6dp"
                        android:backgroundTint="#23FF9800"
                        android:text="@string/show_all"
                        android:textColor="@color/black"
                        android:textStyle="bold|italic" />

                    <ImageView
                        android:layout_width="140dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/module_icon3"
                        android:layout_marginRight="10dp"
                        android:layout_alignParentRight="true"/>

                </RelativeLayout>



            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="190dp">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="150dp"
                    android:background="@drawable/bg2"
                    android:layout_margin="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Module 4"
                        android:textSize="30dp"
                        android:fontFamily="@font/baloo"
                        android:padding="20dp"/>

                    <Button
                        android:id="@+id/showBtn4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="false"
                        android:layout_marginTop="110dp"
                        android:layout_marginBottom="-6dp"
                        android:backgroundTint="#4300BCD4"
                        android:text="@string/show_all"
                        android:textColor="@color/black"
                        android:textStyle="bold|italic" />

                    <ImageView
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/module_icon4"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="15dp"
                        android:layout_alignParentRight="true"/>

                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="190dp">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="150dp"
                    android:background="@drawable/bg1"
                    android:layout_margin="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Module 5"
                        android:textSize="30dp"
                        android:fontFamily="@font/baloo"
                        android:padding="20dp"/>

                    <Button
                        android:id="@+id/showBtn5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="false"
                        android:layout_marginTop="110dp"
                        android:layout_marginBottom="-6dp"
                        android:backgroundTint="#23FF9800"
                        android:text="@string/show_all"
                        android:textColor="@color/black"
                        android:textStyle="bold|italic" />

                    <ImageView
                        android:layout_width="140dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:src="@drawable/module_icon5"
                        android:layout_marginRight="10dp"
                        android:layout_alignParentRight="true"/>

                </RelativeLayout>
            </RelativeLayout>

        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottom_navigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:backgroundTint="@color/white"
            android:elevation="8dp"
            app:menu="@menu/bottom_nav_bar"
            tools:ignore="MissingConstraints" />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

