<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HealthEducationFragment">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="700dp"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:ignore="MissingConstraints">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imageViewBanner"
                    android:layout_width="398dp"
                    android:layout_height="151dp"
                    android:background="@drawable/health_ed_panel" />

                <ImageButton
                    android:id="@+id/home"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="50dp"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/left_arrow" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            </LinearLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="190dp">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="150dp"
                    android:background="@drawable/doctor_panel"
                    android:layout_margin="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Protect Yourself\nAgainst COVID-19"
                        android:textSize="20dp"
                        android:fontFamily="@font/baloo"
                        android:padding="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"/>

                    <Button
                        android:id="@+id/showBtn1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="false"
                        android:layout_marginTop="110dp"
                        android:layout_marginBottom="-6dp"
                        android:backgroundTint="#0984e3"
                        android:text="@string/show_all"
                        android:textColor="@color/white"
                        android:textStyle="bold|italic" />

                    <ImageView
                        android:layout_width="140dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/module_icon2"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="10dp"
                        android:layout_alignParentRight="true"/>

                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="190dp">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="150dp"
                    android:background="@drawable/doctor_panel"
                    android:layout_margin="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Maintain A Healthy\nDiet"
                        android:textSize="20dp"
                        android:fontFamily="@font/baloo"
                        android:padding="20dp"/>

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="false"
                        android:layout_marginTop="110dp"
                        android:layout_marginBottom="-6dp"
                        android:backgroundTint="#0984e3"
                        android:text="@string/show_all"
                        android:textColor="@color/white"
                        android:textStyle="bold|italic" />

                    <ImageView
                        android:layout_width="140dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/module_icon"
                        android:layout_marginRight="-10dp"
                        android:layout_marginBottom="-20dp"
                        android:layout_alignParentRight="true"/>

                </RelativeLayout>



            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="190dp">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="150dp"
                    android:background="@drawable/doctor_panel"
                    android:layout_margin="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="How To Keep A\nHealthy Mindset"
                        android:textSize="20dp"
                        android:fontFamily="@font/baloo"
                        android:padding="20dp"/>

                    <Button
                        android:id="@+id/showBtn3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="false"
                        android:layout_marginTop="110dp"
                        android:layout_marginBottom="-6dp"
                        android:backgroundTint="#0984e3"
                        android:text="@string/show_all"
                        android:textColor="@color/white"
                        android:textStyle="bold|italic" />

                    <ImageView
                        android:layout_width="140dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/module_icon3"
                        android:layout_marginRight="10dp"
                        android:layout_alignParentRight="true"/>

                </RelativeLayout>



            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="190dp">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="150dp"
                    android:background="@drawable/doctor_panel"
                    android:layout_margin="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Importance of\nHealth Insurance"
                        android:textSize="20dp"
                        android:fontFamily="@font/baloo"
                        android:padding="20dp"/>

                    <Button
                        android:id="@+id/showBtn4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="false"
                        android:layout_marginTop="110dp"
                        android:layout_marginBottom="-6dp"
                        android:backgroundTint="#0984e3"
                        android:text="@string/show_all"
                        android:textColor="@color/white"
                        android:textStyle="bold|italic" />

                    <ImageView
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/module_icon4"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="15dp"
                        android:layout_alignParentRight="true"/>

                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="190dp">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="150dp"
                    android:background="@drawable/doctor_panel"
                    android:layout_margin="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="How To Build A\nHealthy Immune\nSystem"
                        android:textSize="18dp"
                        android:fontFamily="@font/baloo"
                        android:padding="20dp"/>

                    <Button
                        android:id="@+id/showBtn5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="false"
                        android:layout_marginTop="110dp"
                        android:layout_marginBottom="-6dp"
                        android:backgroundTint="#0984e3"
                        android:text="@string/show_all"
                        android:textColor="@color/white"
                        android:textStyle="bold|italic" />

                    <ImageView
                        android:layout_width="140dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:src="@drawable/module_icon5"
                        android:layout_marginRight="10dp"
                        android:layout_alignParentRight="true"/>

                </RelativeLayout>
            </RelativeLayout>

        </LinearLayout>
    </ScrollView>


</FrameLayout>