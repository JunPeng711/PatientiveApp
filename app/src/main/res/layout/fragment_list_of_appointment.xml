<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ListOfAppointmentFragment">

    <!-- TODO: Update blank fragment layout -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imageViewBanner"
                    android:layout_width="398dp"
                    android:layout_height="151dp"
                    android:background="@drawable/top_banner7" />

                <ImageButton
                    android:id="@+id/back"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="50dp"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/left_arrow" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/app1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/header"
                tools:ignore="MissingConstraints">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="370dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/appointment_panel"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textViewAppointment1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/baloo"
                        android:padding="10dp"
                        android:text="Appointment 1"
                        android:textSize="30dp"
                        tools:ignore="MissingConstraints" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/baloo"
                            android:text="Name: "
                            android:textSize="17dp" />

                        <TextView
                            android:id="@+id/viewName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/baloo"
                            android:textSize="17dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/baloo"
                            android:text="Patient IC: "
                            android:textSize="17dp" />

                        <TextView
                            android:id="@+id/viewPatientIC"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/baloo"
                            android:textSize="17dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/baloo"
                            android:text="Health Issues: "
                            android:textSize="17dp" />

                        <TextView
                            android:id="@+id/viewHealthIssues"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/baloo"
                            android:textSize="17dp" />
                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="310dp"
                        android:layout_height="45dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp">

                        <ImageView
                            android:layout_width="310dp"
                            android:layout_height="45dp"
                            android:background="@drawable/date_time_panel2" />

                        <TextView
                            android:id="@+id/viewDate"
                            android:layout_width="110dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="60dp"
                            android:layout_marginTop="13dp"
                            android:textColor="@color/white"
                            android:textSize="14dp"
                            android:fontFamily="@font/baloo" />

                        <TextView
                            android:id="@+id/viewTime"
                            android:layout_width="110dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="200dp"
                            android:layout_marginTop="13dp"
                            android:textColor="@color/white"
                            android:textSize="14dp"
                            android:fontFamily="@font/baloo" />
                    </RelativeLayout>

                    <ImageButton
                        android:id="@+id/deleteBtn"
                        android:layout_width="120dp"
                        android:layout_height="45dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/cancel_btn" />

                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:gravity="center">

                <EditText
                    android:id="@+id/EditRoom"
                    android:layout_width="350dp"
                    android:layout_height="50dp"
                    android:background="@drawable/input_field"
                    android:hint="Enter Room ID"
                    android:fontFamily="@font/baloo"
                    android:paddingLeft="30dp"
                    android:textSize="12sp"/>

                <ImageButton
                    android:id="@+id/JoinBtn"
                    android:layout_width="130dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="25dp"
                    android:background="@drawable/join_btn" />


            </LinearLayout>

        </LinearLayout>
    </ScrollView>


</LinearLayout>